<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_little_poster"
        app:layout_constraintTop_toTopOf="@+id/iv_little_poster" />

    <TextView
        android:id="@+id/tv_cap_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status"
        android:textColor="#565E6E"
        app:layout_constraintStart_toStartOf="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:id="@+id/tv_cap_release_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/release_date"
        android:textColor="#565E6E"
        app:layout_constraintStart_toStartOf="@+id/tv_cap_status"
        app:layout_constraintTop_toBottomOf="@+id/tv_cap_status" />

    <TextView
        android:id="@+id/tv_cap_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rating"
        android:textColor="#565E6E"
        app:layout_constraintStart_toStartOf="@+id/tv_cap_release_date"
        app:layout_constraintTop_toBottomOf="@+id/tv_cap_release_date" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/tv_cap_status"
        app:layout_constraintStart_toEndOf="@+id/tv_cap_status"
        app:layout_constraintTop_toTopOf="@+id/tv_cap_status" />

    <TextView
        android:id="@+id/tv_release_date"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/tv_cap_release_date"
        app:layout_constraintStart_toEndOf="@+id/tv_cap_release_date"
        app:layout_constraintTop_toTopOf="@+id/tv_cap_release_date" />

    <TextView
        android:id="@+id/tv_user_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/tv_cap_rating"
        app:layout_constraintStart_toEndOf="@+id/tv_cap_rating"
        app:layout_constraintTop_toTopOf="@+id/tv_cap_rating"
        tools:text="8.8" />

    <Button
        android:id="@+id/btn_add_to_favorites"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/button_shape_not_selected"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_release_date"
        app:layout_constraintStart_toStartOf="@+id/tv_cap_rating"
        app:layout_constraintTop_toBottomOf="@+id/tv_cap_rating" />

    <ImageView
        android:id="@+id/iv_little_poster"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:adjustViewBounds="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/avatars" />

</android.support.constraint.ConstraintLayout>